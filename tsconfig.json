{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "baseUrl": "./src",
    "target": "es2018",
    "module": "commonjs",
    "strict": false,
    "outDir": "./dist/",
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "exclude": ["dist", "node_modules"]
}
